{% for ecard in ecards %}

<div class="card-wrapper">
    <h3 class="card-title">
        <a href="{{request.route_path('ecard', id = ecard.id)}}">
            {{ecard.title}}
        </a>
    </h3>
    
    <div class="frame {{ecard.frame.name}}">
        <img src="{{ecard.image.path}}" alt="Ime slike">
    </div>

    <p class="card-message">{{ecard.message}}</p>
    <span class="card-divider"></span>
    
    <div class="block-actions">
        {% if 'user' in request.session and ecard.user_id == request.session['user']['user_id'] %}
        <a href="{{request.route_path('ecardedit', id = ecard.id)}}">
            <img src="../static/img/edit.png" alt="Uredi čestitku">
        </a>
        <a href="{{request.route_path('ecarddelete', id = ecard.id)}}">
            <img src="../static/img/delete.png" alt="Obriši čestitku">
        </a>
        {% endif %}
         <div class="fb-share-button" data-href="{{request.route_path('ecard', id = ecard.id)}}" data-layout="button" data-size="small" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse">Share</a></div>
         <a href="{{request.route_path('ecard', id = ecard.id)}}" class="twitter-share-button" data-show-count="false">Tweet</a><script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
    </div>
</div>
{% endfor %}